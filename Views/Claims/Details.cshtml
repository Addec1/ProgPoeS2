@model CMCS.Prototype.Models.ClaimVm
@{
    ViewData["Title"] = "Claim Details";
    var files = ViewBag.Files as IReadOnlyList<CMCS.Prototype.Services.StoredFile>;
}

<h1 class="h4 mb-3">Claim Details</h1>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-5">Lecturer</dt>
                    <dd class="col-7">@Model.LecturerName</dd>
                    <dt class="col-5">Period</dt>
                    <dd class="col-7">@Model.Month/@Model.Year</dd>
                    <dt class="col-5">Hourly Rate (R)</dt>
                    <dd class="col-7">@Model.HourlyRate.ToString("N2")</dd>
                    <dt class="col-5">Total Hours</dt>
                    <dd class="col-7">@Model.TotalHours</dd>
                    <dt class="col-5">Status</dt>
                    <dd class="col-7"><span class="badge bg-secondary">@Model.Status</span></dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Documents</h5>
                @if (files is { Count: > 0 })
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var f in files)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><strong>@f.OriginalName</strong> <span class="text-body-secondary">(@f.SizeKB KB)</span></span>
                                <a class="btn btn-sm btn-outline-primary" href="/documents/download/@f.DocumentId">Download</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-body-secondary">No documents uploaded.</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mt-3">
    <div class="card-body">
        <h5 class="card-title">Entries</h5>
        <table class="table table-sm table-hover align-middle mb-0">
            <thead class="table-light"><tr><th>Date</th><th>Hours</th><th>Description</th></tr></thead>
            <tbody>
                @foreach (var e in Model.Entries)
                {
                    <tr><td>@e.Date</td><td>@e.Hours</td><td>@e.Description</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</div>
