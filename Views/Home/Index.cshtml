@{
    ViewData["Title"] = "Home";
}

<div class="row g-4">
    <!-- Hero / Intro -->
    <div class="col-12">
        <div class="p-4 p-md-5 rounded-3 bg-white border shadow-sm">
            <div class="row align-items-center g-4">
                <div class="col-lg-8">
                    <h1 class="display-6 mb-2">Contract Monthly Claim System (CMCS)</h1>
                    <p class="lead mb-0 text-body-secondary">
                        A prototype demonstrating secure monthly claims for Independent Contractor lecturers:
                        create a claim, attach documents (encrypted), and route it for verification & approval.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a class="btn btn-primary btn-lg mb-2" asp-controller="Claims" asp-action="Create">
                        Start New Claim
                    </a>
                    <div class="d-grid gap-2 d-lg-block">
                        <a class="btn btn-outline-primary me-2" asp-controller="Claims" asp-action="Index">My Claims</a>
                        <a class="btn btn-outline-secondary me-2" asp-controller="Coordinator" asp-action="Index">Coordinator</a>
                        <a class="btn btn-outline-secondary" asp-controller="Manager" asp-action="Index">Manager</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How it works + Legend -->
    <div class="col-12 col-lg-7">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <strong>How it works</strong>
            </div>
            <div class="card-body">
                <ol class="mb-3">
                    <li><strong>Lecturer</strong> creates a new claim, adds daily entries, and uploads supporting documents (PDF/DOCX/XLSX).</li>
                    <li>Files are <strong>encrypted at rest</strong> and only decrypted on download.</li>
                    <li><strong>Programme Coordinator</strong> verifies or rejects submitted claims.</li>
                    <li><strong>Academic Manager</strong> approves or rejects verified claims.</li>
                </ol>
                <div class="small text-body-secondary">
                    <span class="me-2">Status legend:</span>
                    <span class="badge bg-secondary">Draft</span>
                    <span class="badge bg-info">Submitted</span>
                    <span class="badge bg-warning">Verified</span>
                    <span class="badge bg-success">Approved</span>
                    <span class="badge bg-danger">Rejected</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick access -->
    <div class="col-12 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <strong>Quick Access</strong>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a class="btn btn-outline-dark" asp-controller="Claims" asp-action="Create"> Create Monthly Claim</a>
                    <a class="btn btn-outline-dark" asp-controller="Claims" asp-action="Index"> View My Claims</a>
                    <a class="btn btn-outline-dark" asp-controller="Coordinator" asp-action="Index"> Coordinator Inbox</a>
                    <a class="btn btn-outline-dark" asp-controller="Manager" asp-action="Index"> Manager Inbox</a>
                </div>
                <p class="mt-3 mb-0 small text-body-secondary">
                    Tip: Uploading docs happens inside the <em>Create</em> page. Files are validated (type &lt;= 10MB).
                </p>
            </div>
        </div>
    </div>

    <!-- Role cards -->
    <div class="col-12">
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">Lecturer</h5>
                        <p class="card-text text-body-secondary mb-3">
                            Create claims, add entries, and attach supporting documents.
                        </p>
                        <a class="btn btn-sm btn-primary" asp-controller="Claims" asp-action="Create">Start claim</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Claims" asp-action="Index">My claims</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">Programme Coordinator</h5>
                        <p class="card-text text-body-secondary mb-3">
                            Review submitted claims, verify or reject, and download docs securely.
                        </p>
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Coordinator" asp-action="Index">Open inbox</a>
                    </div>
                </div>
            </div> 
            <div class="col-12 col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-2">Academic Manager</h5>
                        <p class="card-text text-body-secondary mb-3">
                            Approve or reject verified claims and access attachments when needed.
                        </p>
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Manager" asp-action="Index">Open approvals</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Privacy note -->
    <div class="col-12">
        <div class="alert alert-light border shadow-sm mb-0">
            <strong>Privacy:</strong> This is a non-functional academic prototype. No real user data is stored. Security features
            (encryption, validation) are included to demonstrate best practice for future development.
        </div>
    </div>
</div>
