@model CMCS.Prototype.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<h1 class="text-danger">Oops! Something went wrong.</h1>
<p class="lead">An unexpected error occurred. Please try again or contact your lecturer with the steps to reproduce.</p>

@if (Model.ShowRequestId)
{
    <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
</div>