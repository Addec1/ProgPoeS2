@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CMCS.Prototype</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.Prototype.styles.css" asp-append-version="true" />
</head>
<body class="bg-body-tertiary">
    <header class="border-bottom bg-white">
        <nav class="navbar navbar-expand-sm container-lg">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">CMCS.Prototype</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Claims" asp-action="Index">My Claims</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Coordinator" asp-action="Index">Coordinator</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Manager" asp-action="Index">Manager</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
                @* Removed the Start New Claim button from the navbar *@
            </div>
        </nav>
    </header>

    <div class="container-lg my-4">
        <main role="main" class="pb-3">
            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top py-3 small text-body-secondary bg-white">
        <div class="container-lg d-flex justify-content-between">
            <div>© 2025 CMCS.Prototype</div>
            <div><a class="link-secondary" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Active nav indicator -->
    <script>
        (function(){
          const path = location.pathname.toLowerCase();
          document.querySelectorAll('.navbar .nav-link').forEach(a=>{
            const href = a.getAttribute('href')?.toLowerCase() || '';
            if (href && path.startsWith(href)) a.setAttribute('aria-current','page');
          });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
