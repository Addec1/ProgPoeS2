@model CloudIce3.Web.Models.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<div class="container" style="max-width:480px">
    <h2 class="mb-3">Sign in</h2>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Username or Email</label>
            <input asp-for="UsernameOrEmail" class="form-control" />
            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="btn btn-primary w-100">Login</button>
        <div class="text-danger mt-2">@Html.ValidationSummary()</div>
        <div class="mt-3"><a asp-action="Register">New here? Create an account</a></div>
    </form>
</div>
