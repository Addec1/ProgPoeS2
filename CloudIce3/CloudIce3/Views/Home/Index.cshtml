@model CloudIce3.Web.Models.ProfileGetResponse
@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}
<div class="container py-4">
    <div class="d-flex align-items-center gap-3">
        <img src="@(!string.IsNullOrEmpty(Model?.BlobUrl) ? Model.BlobUrl : Url.Content("~/img/avatar-placeholder.png"))"
             class="rounded-circle" style="width:80px;height:80px;object-fit:cover" alt="avatar" />
        <div>
            <h3 class="m-0">Welcome, @Model?.DisplayName!</h3>
            <div class="text-muted">@Model?.Email</div>
        </div>
    </div>
    <hr />
    <nav class="nav gap-2">
        <a class="btn btn-outline-primary" asp-controller="Profile" asp-action="Edit">Edit Profile</a>
        <form class="d-inline" method="post" asp-controller="Auth" asp-action="Logout">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger">Log out</button>
        </form>
    </nav>
</div>